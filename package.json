{
  "name": "linear-cli-agents",
  "version": "0.1.0",
  "description": "CLI for interacting with Linear, designed for LLMs and agents",
  "author": "Nacho",
  "bin": {
    "linear": "./bin/run.js"
  },
  "homepage": "https://github.com/nacho/linear-cli",
  "license": "MIT",
  "main": "dist/index.js",
  "type": "module",
  "repository": "nacho/linear-cli",
  "files": [
    "/bin",
    "/dist",
    "/oclif.manifest.json"
  ],
  "dependencies": {
    "@linear/sdk": "^29.0.0",
    "@oclif/core": "^4.3.0",
    "@oclif/plugin-help": "^6.2.0"
  },
  "devDependencies": {
    "@oclif/prettier-config": "^0.2.1",
    "@oclif/test": "^4.1.0",
    "@types/node": "^22.0.0",
    "oclif": "^4.17.0",
    "shx": "^0.3.4",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "oclif": {
    "bin": "linear",
    "dirname": "linear-cli",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help"
    ],
    "topicSeparator": " ",
    "topics": {
      "auth": {
        "description": "Authentication commands"
      },
      "issues": {
        "description": "Issue management commands"
      }
    }
  },
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "tsc --noEmit",
    "postpack": "shx rm -f oclif.manifest.json",
    "prepack": "pnpm run build && oclif manifest && oclif readme",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "linear",
    "cli",
    "llm",
    "agent",
    "project-management"
  ],
  "packageManager": "pnpm@10.18.1"
}
